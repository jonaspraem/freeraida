{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "types": ["node"],
    "outDir": "server/dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": false,
    "strict": false,
    "strictNullChecks": false,
    "lib": ["es6", "dom"],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "client/*"]
}
