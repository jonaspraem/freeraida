{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "types": ["node"],
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "sourceMap": true,
    "noImplicitAny": false,
    "strict": false,
    "skipLibCheck": true,
    "lib": ["ES2022", "dom"],
    "allowSyntheticDefaultImports": true
  },
  "files": ["app/main.ts"],
  "include": ["app/**/*.d.ts", "app/**/*.ts"],
  "exclude": ["node_modules"]
}
